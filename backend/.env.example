# SQLite example (relative path)
DATABASE_URL=sqlite:///./app.db
# SQLite example (absolute path, Windows)
# DATABASE_URL=sqlite:///C:/data/pickone/app.db
# SQLite example (absolute path, Linux/macOS)
# DATABASE_URL=sqlite:////var/lib/pickone/app.db
# MySQL example (pymysql driver)
# DATABASE_URL=mysql+pymysql://user:password@127.0.0.1:3306/pickone?charset=utf8mb4
