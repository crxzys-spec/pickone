# DATABASE_URL=mysql+mysqlclient://user:password@127.0.0.1:3306/pickone?charset=utf8mb4
SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

